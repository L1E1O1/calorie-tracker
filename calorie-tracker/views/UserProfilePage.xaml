<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calorie_tracker.views.UserProfilePage"
             Title="Create Profile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Name" />
            <Entry x:Name="nameEntry" Placeholder="Enter your name" />

            <Label Text="Age" />
            <Entry x:Name="ageEntry" Keyboard="Numeric" Placeholder="Enter age" />

            <Label Text="Weight (kg)" />
            <Entry x:Name="weightEntry" Keyboard="Numeric" Placeholder="Enter weight" />

            <Label Text="Height (cm)" />
            <Entry x:Name="heightEntry" Keyboard="Numeric" Placeholder="Enter height" />

            <Label Text="Daily Calorie Goal" />
            <Entry x:Name="goalEntry" Keyboard="Numeric" Placeholder="e.g. 2500" />

            <Button Text="Create Profile" Clicked="OnCreateProfileClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
