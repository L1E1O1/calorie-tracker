<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="calorie_tracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:calorie_tracker.views"
    Shell.FlyoutBehavior="Flyout"
    Title="calorie_tracker">

    <TabBar>
        <ShellContent Title="Start"  ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="UserProfile"  ContentTemplate="{DataTemplate local:UserProfilePage}" />
        <ShellContent Title="AddMeal"  ContentTemplate="{DataTemplate local:AddMealPage}" />
    </TabBar>
</Shell>
